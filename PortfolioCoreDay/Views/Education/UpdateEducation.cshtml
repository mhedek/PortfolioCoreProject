@model Education
@{
    ViewData["Title"] = "UpdateEducation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Eğitim Güncelleme Sayfası</h2>

<form method="post">

    <input type="hidden" asp-for="EducationId" />
    <label>Açıklama</label>
    <input type="text" asp-for="Title" class="form-control" style="border:1px solid black" />
    <br />

    <label>Hakkımda Başlığı</label>
    <input type="text" asp-for="University" class="form-control" style="border:1px solid black" />
    <br />

    <label>Hakkımda Açıklaması</label>
    <input type="text" asp-for="Department" class="form-control" style="border:1px solid black" />
    <br />

    <label>Telefon</label>
    <input type="text" asp-for="EducationDate" class="form-control" style="border:1px solid black" />
    <br />

    <button class="btn btn-primary">Güncelle</button>
</form>

