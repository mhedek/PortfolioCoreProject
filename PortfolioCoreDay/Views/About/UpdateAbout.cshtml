@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda Güncelleme Sayfası</h2>

<form method="post">

    <input type="hidden" asp-for="AboutId" />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" style="border:1px solid black" />
    <br />

    <label>Hakkımda Başlığı</label>
    <input type="text" asp-for="SubTitle" class="form-control" style="border:1px solid black" />
    <br />

    <label>Hakkımda Açıklaması</label>
    <input type="text" asp-for="SubDescription" class="form-control" style="border:1px solid black" />
    <br />

    <label>Telefon</label>
    <input type="text" asp-for="Phone" class="form-control" style="border:1px solid black" />
    <br />

    <button class="btn btn-primary">Güncelle</button>
</form>

