@model Contact
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>İletişim Güncelleme Sayfası</h2>

<form method="post">
    <input type="hidden" asp-for="ContactId" />
    <label>Adres</label>
    <input type="text" asp-for="Address" class="form-control" style="border:1px solid black" />
    <br />

    <label>Telefon</label>
    <input type="text" asp-for="Phone" class="form-control" style="border:1px solid black" />
    <br />

    <label>Mail</label>
    <input type="text" asp-for="Mail" class="form-control" style="border:1px solid black" />
    <br />

    <button class="btn btn-primary">Kaydet</button>
</form>

