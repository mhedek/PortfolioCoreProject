@model List<About>
<section id="about" class="about section">
    @foreach (var item in Model)
    {
        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>Hakkımda Daha Fazlası</h2>
            <p>@item.Description</p>
        </div>

        <!-- End Section Title -->

        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row gy-4 justify-content-center">
                <div class="col-lg-4">
                    <img src="assets/img/my-profile-img.jpg" class="img-fluid" alt="">
                </div>
                <div class="col-lg-8 content">
                    <h2>@item.SubTitle</h2>
                    <p class="fst-italic py-3">
                        @item.SubDescription
                    </p>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@item.Phone</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Mail:</strong> <span>@item.Mail</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Ülke:</strong> <span>@item.Address</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@item.City</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
</section>